{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "8.0",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.0",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "2.7.0",
        "filp/whoops": "^2.0",
        "fakerphp/faker": "^1.9.1",
        "knuckleswtf/scribe": "^2.7",
        "laravel/ui": "^1.0",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpstan/phpstan": "^0.12.88",
        "phpunit/phpunit": "^9.5.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Basic\\": "packages/Basic",
            "Auth\\": "packages/Auth"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ],
        "test:coverage": [
            "phpunit --coverage-html coverage"
        ],
        "sniffer": [
            "./vendor/bin/phpcs --standard=phpcs.xml ./packages/"
        ],
        "sniffer-rewrite": [
            "./vendor/bin/phpcbf --standard=phpcs.xml ./packages/"
        ],
        "sniffer-report-csv": [
            "./vendor/bin/phpcs --standard=phpcs.xml --report=csv --report-file=./sniffer-reports/report.csv ./packages/"
        ],
        "static-type-check": [
            "./vendor/bin/phpstan analyse -c phpstan.neon"
        ],
        "document-generator": [
            "@php artisan scribe:generate"
        ],
        "cache:clear": [
            "@php artisan cache:clear",
            "@php artisan config:clear",
            "@php artisan route:clear",
            "@php artisan view:clear",
            "@composer dump-autoload",
            "@php artisan clear-compiled",
            "@php artisan optimize",
            "@php artisan config:cache"
        ]
    }
}
